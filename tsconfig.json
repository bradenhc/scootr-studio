{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "app/*": ["src/app/*"],
      "shared/*": ["src/app/shared/*"],
      "layouts/*": ["src/app/layouts/*"],
      "status/*": ["src/app/status/*"],
      "edaam/*": ["src/app/edaam/*"],
      "components/*": ["src/app/components/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
